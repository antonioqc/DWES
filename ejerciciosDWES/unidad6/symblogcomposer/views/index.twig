{% extends 'layout.twig' %}
{% block body %}
{% set contador = 0 %}
{% for blog in blogs %}
    {#{% set contador = contador + 1 %}#}
    <article class="blog">
        <div class="date">
            <time datetime="{{ blog.created_at|date('c') }}">{{ blog.created_at|date('l, F j, Y') }}</time>
        </div>
        <header>
            <h2><a href="/ejerciciosDWES/unidad6/symblogcomposer/blogs/show?id={{blog.id}}">{{blog.title}}</a></h2>
        </header>
        <img src={{"/ejerciciosDWES/unidad6/symblogcomposer/img/" ~ blog.img ~ " "}}/>
        <div class="snippet">
            <p>{{blog.blog}}</p>
            <p class="continue"><a href="#">Continue reading...</a></p>
        </div>
        <footer class="meta">
            <p>Comments: <a href="#">Numero comentarios: </a></p>
            <p>Posted by <span class="highlight">{{blog.author}}</span> at {{blog.created_at|date('h:iA')}}</p>
            <p>Tags: <span class="highlight">{{blog.tags}}</span></p>
        </footer>
    </article>
{% else %}
    <p>There are no blog entries for symblog</p>
{% endfor %}
{% endblock %}
