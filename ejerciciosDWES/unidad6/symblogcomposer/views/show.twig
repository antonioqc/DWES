{% extends 'layout.twig' %}
{% block body %}
        <article class="blog">
        <div class="date">
            <time datetime="{{ blog.created_at|date('c') }}">{{ blog.created_at|date('l, F j, Y') }}</time>
        </div>
        <header>
            <h2><a href="/ejerciciosDWES/unidad6/symblogcomposer/show?id={{blog.id}}">{{blog.title}}</a></h2>
        </header>
        <img src={{"/ejerciciosDWES/unidad6/symblogcomposer/img/" ~ blog.img ~ " "}}/>
        <div class="snippet">
            <p>{{blog.blog}}</p>
            <p class="continue"><a href="#">Continue reading...</a></p>
        </div>
        
    </article>
    <p>Comments:</p> 
    
    {% for comment in comments %}
        <article class="comments">
            <div class="comment">
                <p><span class="highlight">{{comment.user}}</span> commented {{comment.created_at|date('l, F j, Y')}}</p>
                <P>{{comment.comment}}</p>
            </div>
        </article>
    {% endfor %}

    <footer class="meta">
        <p>Posted by <span class="highlight">{{blog.author}}</span> at {{blog.created_at|date('h:iA')}}</p>
        <p>Tags: <span class="highlight">{{blog.tags}}</span></p>
    </footer>
{% endblock %}