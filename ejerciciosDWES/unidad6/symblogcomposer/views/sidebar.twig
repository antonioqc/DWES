<section class="section">
    <header>
        <h3>Tag Cloud</h3>
    </header>
    <p class="tags">
    {% for blog in blogs %}
        <span class="weight-{{ blog.id }}">{{ blog.tags }}</span>
    {% else %}
        <p>There are no tags</p>
    {% endfor %}
    </p>
</section>

<section class="section"> 
    <header> 
        <h3>Latest Comments</h3> 
    </header> 
    {% for comment in latestComments %} 
        <article class="comment"> 
            <header> 
                <p class="small"><span class="highlight">{{ comment.user }}</span> commented on 
                    <a href="#', { 'id': comment.blog.id }) }}#comment-{{ comment.id }}"> 
                        {{ comment.blog.title }} 
                    </a> 
                    <!--em><time datetime="{{ comment.created|date('c') }}">{{ comment.crea-ted|date('Y-m-d h:iA') }}</time></em--> 
                </p> 
            </header> 
            <p>{{ comment.comment }}</p> 
            </p> 
        </article> 
    {% else %} 
        <p>There are no recent comments</p> 
    {% endfor %}